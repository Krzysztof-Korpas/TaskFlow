@model TaskFlow.Models.ViewModel.UserPanelModel
@{
    ViewData["Title"] = Localizer["User.Panel"].Value;
}

<div class="page-header">
    <h1>@Localizer["User.Panel"]</h1>
</div>

<div class="grid grid-2">
    <div class="card">
        <h2>@Localizer["User.AccountInfo"]</h2>
        <div class="form-group">
            <label>@Localizer["Auth.Email"]</label>
            <input type="text" value="@Model.Email" disabled />
        </div>
        <div class="form-group">
            <label>@Localizer["Auth.DisplayName"]</label>
            <input type="text" value="@Model.DisplayName" disabled />
        </div>
    </div>

    <div class="card">
        <h2>@Localizer["User.ChangePassword"]</h2>
        
        @if (TempData["SuccessMessage"] != null)
        {
            <div style="padding: 0.75rem; background: rgba(34, 197, 94, 0.15); border: 1px solid var(--success); border-radius: var(--radius); margin-bottom: 1rem; color: var(--success);">
                @Localizer[TempData["SuccessMessage"]!.ToString()!]
            </div>
        }
        
        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="error">
                <ul style="margin: 0; padding-left: 1.25rem;">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
        
        <form method="post" asp-action="ChangePassword" asp-controller="Account">
            <div class="form-group">
                <label asp-for="ChangePasswordModel!.CurrentPassword">@Localizer["User.CurrentPassword"]</label>
                <input asp-for="ChangePasswordModel!.CurrentPassword" type="password" />
                <span asp-validation-for="ChangePasswordModel!.CurrentPassword" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ChangePasswordModel!.NewPassword">@Localizer["User.NewPassword"]</label>
                <input asp-for="ChangePasswordModel!.NewPassword" type="password" />
                <span asp-validation-for="ChangePasswordModel!.NewPassword" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ChangePasswordModel!.ConfirmPassword">@Localizer["Auth.ConfirmPassword"]</label>
                <input asp-for="ChangePasswordModel!.ConfirmPassword" type="password" />
                <span asp-validation-for="ChangePasswordModel!.ConfirmPassword" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">@Localizer["User.ChangePasswordSubmit"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
